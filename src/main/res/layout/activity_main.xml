<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/img"
    tools:context="com.example.alex.ovenui.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Πόρτα"
        android:id="@+id/doorId"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Προεπιλογή"
        android:id="@+id/autoId"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/doorId"
        android:layout_alignStart="@+id/doorId"
        android:layout_marginBottom="99dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ρυθμίσεις"
        android:id="@+id/manualId"
        android:layout_alignTop="@+id/doorId"
        android:layout_toRightOf="@+id/autoId"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Έκτακτη Ανάγκη"
        android:id="@+id/alertId"
        android:backgroundTint="#f40505"
        android:layout_alignTop="@+id/autoId"
        android:layout_alignLeft="@+id/manualId"
        android:layout_alignStart="@+id/manualId" />
</RelativeLayout>
